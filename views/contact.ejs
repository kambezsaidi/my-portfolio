<%- include('partials/header', { title: 'Kambez Saidi - Contact' }) %>

<main class="container">
    <section class="content">
        <h1>Get In Touch</h1>
        
        <form id="contact-form" action="/contact" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            
            <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message" name="message" rows="5" required></textarea>
            </div>
            
            <button type="submit" class="submit-btn">Send Message</button>
        </form>
        
        <div class="contact-info">
            <p>Email: <a href="mailto:kambez.saidi@outlook.com">kambez.saidi@outlook.com</a></p>
            <p>GitHub: <a href="https://github.com/kambezsaidi" target="_blank">github.com/kambezsaidi</a></p>
            <p>LinkedIn: <a href="https://www.linkedin.com/in/kambez-saidi" target="_blank">linkedin.com/in/kambez-saidi</a></p>
        </div>
    </section>
</main>

<%- include('partials/footer') %>